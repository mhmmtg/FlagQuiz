<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grad"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.frag.ResultsFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/cup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Congratulations!"
        android:textColor="@color/text_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textResultName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/text_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Your Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textResultCorrectAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/light_gray"
            tools:text="Correct Answers: 5" />

        <TextView
            android:id="@+id/textResultPlusPts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#41AF5E"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="+500" />

        <TextView
            android:id="@+id/textResultElapsedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/light_gray"
            tools:text="Elapsed time: 01:15" />

        <TextView
            android:id="@+id/textResultMinusPts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#E63946"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="-75" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/your_score_is"
            android:textAlignment="center"
            android:textColor="@color/light_gray" />

        <TextView
            android:id="@+id/textResultScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="48sp"
            android:textStyle="bold"
            tools:text="67" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_rounded"
        android:text="Start Over"
        android:textSize="18sp"
        app:backgroundTint="@color/text_dark" />


</LinearLayout>